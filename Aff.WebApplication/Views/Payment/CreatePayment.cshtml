@model Aff.Models.Models.PaymentModel
@{
    ViewBag.Title = "CreatePayment";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="d-block">
    <div class="m-widget17">
        @Html.Action("Balance", "Transaction")
    </div>
</div>
<div class="m-portlet">
    <form class="m-form m-form--fit m-form--label-align-right m-form--group-seperator-dashed" id="create-payment-valid" method="post" action="/payment/CreateNewPayment">
        <div class="m-portlet__body">
            <div class="m-portlet__head">
                <div class="m-portlet__head-caption">
                    <div class="m-portlet__head-title">
                        <span class="m-portlet__head-icon m--hide">
                            <i class="la la-gear"></i>
                        </span>
                        <h5 class="m-portlet__head-text">
                            Tạo đơn rút tiền
                        </h5>
                    </div>
                </div>
            </div>

            <div class="m-form__content">
                <div class="m-alert m-alert--icon alert alert-danger m--hide" role="alert" id="m_form_1_msg">
                    <div class="m-alert__icon">
                        <i class="la la-warning"></i>
                    </div>
                    <div class="m-alert__text">
                        Oh snap! Change a few things up and try submitting again.
                    </div>
                    <div class="m-alert__close">
                        <button type="button" class="close" data-close="alert" aria-label="Close"></button>
                    </div>
                </div>
            </div>
            <div class="form-group m-form__group row">
                <div class="col-lg-6">
                    <label class="">
                        Số tiền cần rút:
                    </label>
                    <div class="m-input-icon m-input-icon--right">
                        <input type="text" class="form-control m-input" name="AmountEarning" placeholder="" value="@(Model.AvailableBalance-Model.AmountEarning)">
                        <span class="m-input-icon__icon m-input-icon__icon--right">
                            <span>
                                <i class="la la-bookmark-o"></i>
                            </span>
                        </span>
                    </div>
                </div>
                <div class="col-lg-6">
                    
                </div>
            </div>
            <div class="form-group m-form__group row">
                <div class="col-lg-12">
                    <label>
                        Phương thức thanh toán:
                    </label>
                    <span class="m-input-icon__icon m-input-icon__icon--right">
                        Chuyển khoản ngân hàng
                    </span>
                </div>
                

            </div>
            <div class="form-group m-form__group row">
                <div class="col-lg-12">
                    <label>
                        Thông tin thanh toán:
                    </label>
                    <span class="m-input-icon__icon m-input-icon__icon--right">
                        @Model.AccountInfo 
                    </span>
                    <a href="@Url.Action("UpdateUser", "account")">sửa</a>
                    <input type="text" class="form-control m-input m--hide" name="AccountInfo" placeholder="" value="@Model.AccountInfo">
                </div>
            </div>
        </div>
        <div class="m-portlet__foot m-portlet__no-border m-portlet__foot--fit">
            <div class="m-form__actions m-form__actions--solid">
                <div class="row">
                    <div class="col-lg-6">
                        <button type="submit" class="btn btn-primary">
                            Tạo đơn
                        </button>
                        <button type="reset" class="btn btn-secondary" onclick="window.location.href='@Url.Action("withdraws","Transaction")'">
                            Hủy bỏ
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>



@section scripts
{
    <script src="~/assets/scripts/form-controls.js" type="text/javascript"></script>
}




