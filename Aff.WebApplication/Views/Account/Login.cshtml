@{ Layout = null;}
@using Aff.Models.Models
@model UserModel
@{
    ViewBag.Title = "Log in";
}

<html lang="en">
<!-- begin::Head -->
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - Affiliate Application</title>
    <meta name="description" content="Latest updates and statistic charts">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!--begin::Web font -->
    <script src="https://ajax.googleapis.com/ajax/libs/webfont/1.6.16/webfont.js"></script>
    <script>
          WebFont.load({
            google: {"families":["Poppins:300,400,500,600,700","Roboto:300,400,500,600,700"]},
            active: function() {
                sessionStorage.fonts = true;
            }
          });
    </script>
    @Styles.Render("~/assets/css")
</head>
<!-- end::Head -->
<!-- end::Body -->
<body class="m--skin- m-header--fixed m-header--fixed-mobile m-aside-left--enabled m-aside-left--skin-dark m-aside-left--offcanvas m-footer--push m-aside--offcanvas-default">
    <!-- begin:: Page -->
    <div class="m-grid m-grid--hor m-grid--root m-page">
        <div class="m-grid__item m-grid__item--fluid m-grid m-grid--hor m-login m-login--signin m-login--2 m-login-2--skin-1" id="m_login" style="background-image: url(../../../assets/app/media/img//bg/bg-1.jpg);">
            <div class="m-grid__item m-grid__item--fluid	m-login__wrapper">
                <div class="m-login__container">
                    <div class="m-login__logo" style="margin: 0;">
                        <a href="#">
                            <img src="~/assets/icon/logo2.png" style="width: 180px;">
                        </a>
                    </div>
                    <div class="m-login__signin">
                        <div class="m-login__head">
                            <h3 class="m-login__title">
                                Form đăng nhập
                            </h3>
                        </div>

                        <form class="m-login__form m-form" method="post" style="margin: 2rem auto;">
                            @Html.AntiForgeryToken()
                            <input type="hidden" id="returnUrl" value="@ViewBag.ReturnUrl" />
                            @Html.ValidationSummary(false)
                            <div class="form-group m-form__group">
                                @Html.TextBoxFor(x => x.Email, new { @class = "form-control m-input", placeholder = "Email", autocomplete = "off" })
                            </div>
                            <div class="form-group m-form__group">
                                @Html.TextBoxFor(x => x.Password, new { @class = "form-control m-input m-login__form-input--last", placeholder = "Mật khẩu", type= "password" })
                            </div>
                            <div class="row m-login__form-sub">
                                <div class="col m--align-left m-login__form-left">
                                    <label class="m-checkbox  m-checkbox--light">
                                        <input type="checkbox" name="remember">
                                        Ghi nhớ
                                        <span></span>
                                    </label>
                                </div>
                                <div class="col m--align-right m-login__form-right">
                                    <a href="javascript:;" id="m_login_forget_password" class="m-link">
                                        Quên mật khẩu ?
                                    </a>
                                </div>
                            </div>
                            <div class="m-login__form-action">
                                <button id="m_login_signin_submit" class="btn btn-focus m-btn m-btn--pill m-btn--custom m-btn--air  m-login__btn m-login__btn--primary">
                                    Đăng nhập
                                </button>
                            </div>
                        </form>
                    </div>
                    <div class="m-login__signup">
                        <div class="m-login__head">
                            <h3 class="m-login__title">
                                Đăng ký
                            </h3>
                            <div class="m-login__desc">
                                Nhập thông tin chi tiết của bạn để tạo tài khoản:
                            </div>
                        </div>
                        <form class="m-login__form m-form" action=""  method="post">
                            @Html.AntiForgeryToken()
                            <div class="form-group m-form__group">
                                @Html.TextBoxFor(x => x.FullName, new { @class = "form-control m-input", @placeholder = "Họ tên", @Id = "rfullname", @Name = "fullname", @autocomplete = "off" })
                            </div>
                            <div class="form-group m-form__group">
                                @Html.TextBoxFor(x => x.Email, new { @class = "form-control m-input", @placeholder = "Email", @Id = "remail", @Name = "email", @autocomplete = "off" })
                            </div>
                            <div class="form-group m-form__group">
                                @Html.TextBoxFor(x => x.Password, new { @class = "form-control m-input", @placeholder = "Mật khẩu", @type = "password", @Id = "rPassword", @Name = "password", @autocomplete = "off" })
                            </div>
                            <div class="form-group m-form__group">
                                @Html.TextBoxFor(x => x.Password, new { @class = "form-control m-input", placeholder = "Nhập lại mật khẩu", type = "password", @Id= "rrPassword", @Name = "rpassword", autocomplete = "off" })
                            </div>
                            <div class="form-group m-form__group">
                                @Html.TextBoxFor(x => x.Phone, new { @class = "form-control m-input", placeholder = "Số điện thoại", @Id = "Phone", @Name = "Phone", autocomplete = "off" })
                            </div>
                            <div class="form-group m-form__group collapse">
                                @Html.TextBoxFor(x => x.AffCode, new { @class = "form-control m-input m-login__form-input--last", placeholder = "Mã giới thiệu", autocomplete = "off" })
                            </div>
                            <div class="row form-group m-form__group m-login__form-sub">
                                <div class="col m--align-left">
                                    <label class="m-checkbox m-checkbox--light">
                                        <input type="checkbox" name="agree">
                                        Tôi đồng ý
                                        <a href="#" class="m-link m-link--focus">
                                            các điều khoản và các điều kiện
                                        </a>
                                        .
                                        <span></span>
                                    </label>
                                    <span class="m-form__help"></span>
                                </div>
                            </div>
                            <div class="m-login__form-action">
                                <button id="m_login_signup_submit" class="btn m-btn m-btn--pill m-btn--custom m-btn--air m-login__btn m-login__btn--primary">
                                    Đăng ký
                                </button>
                                &nbsp;&nbsp;
                                <button id="m_login_signup_cancel" class="btn m-btn m-btn--pill m-btn--custom m-btn--air m-login__btn">
                                    Hủy
                                </button>
                            </div>
                        </form>
                    </div>
                    <div class="m-login__forget-password">
                        <div class="m-login__head">
                            <h3 class="m-login__title">
                                Bạn quên mật khẩu ?
                            </h3>
                            <div class="m-login__desc">
                                Nhập email của bạn để reset mật khẩu:
                            </div>
                        </div>
                        <form class="m-login__form m-form" action="">
                            <div class="form-group m-form__group">
                                <input class="form-control m-input" type="text" placeholder="Email" name="email" id="m_email" autocomplete="off">
                            </div>
                            <div class="m-login__form-action">
                                <button id="m_login_forget_password_submit" class="btn m-btn m-btn--pill m-btn--custom m-btn--air m-login__btn m-login__btn--primary">
                                    Gửi yêu cầu
                                </button>
                                &nbsp;&nbsp;
                                <button id="m_login_forget_password_cancel" class="btn m-btn m-btn--pill m-btn--custom m-btn--air m-login__btn">
                                    Hủy
                                </button>
                            </div>
                        </form>
                    </div>
                    <div class="m-login__account">
                        <span class="m-login__account-msg">
                            Bạn chưa có tài khoản ?
                        </span>
                        &nbsp;&nbsp;
                        <a href="javascript:;" id="m_login_signup" class="m-link m-link--light m-login__account-link">
                            Đăng ký
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- end:: Page -->
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/login")
</body>
<!-- end::Body -->
</html>