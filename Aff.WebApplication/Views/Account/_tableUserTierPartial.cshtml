@model Aff.Models.Models.UserSearchIndexModel
@using Aff.WebApplication.Configurations;
@using Aff.WebApplication.Helpers
@if (Model != null && Model.Users != null && Model.Users.Any())
{
    foreach (var item in Model.Users)
    {
        <div class="row item-main" data="@item.UserId" data-index="0" data-status="true">
            <div class="col-1" style="max-width: 5.33333%;">
                @if (item.IsChild == true)
                {
                    <i class="fa-solid fa-caret-right"></i>
                }
                <span>@item.UserId</span>
            </div>
            <div class="col-1">
                <span>@item.Phone</span>
            </div>
            <div class="col-2">
                <span>@item.Email</span>
            </div>
            <div class="col-2">
                <span>@item.AffCode</span>
            </div>
            <div class="col-2" style="max-width: 12.66667%;">
                <span><b> @string.Format("{0:0,0}", (item.TotalBalanceDirect))</b></span>
            </div>
            <div class="col-1">
                <span><b>@string.Format("{0:0,0}", (item.TotalBalanceBonus))</b></span>
            </div>
            <div class="col-2" style="max-width: 12.66667%;">
                <span><b>@string.Format("{0:0,0}", (item.TotalBalanceDirect + item.TotalBalanceBonus - item.PendingAmountEarning))</b></span>
            </div>
            <div class="col-2">
                <span><b> @string.Format("{0:0,0}", ((item.TotalBalanceDirect + item.TotalBalanceBonus - item.PendingAmountEarning) * 0.9))</b></span>
            </div>
        </div>

    }
}


<div class="m-datatable" style="display: block; padding-bottom: 2rem;">
    @Html.AjaxPagingHelper("accountModule.onClickPaging", Model.TotalRecords, Model.PageSize, Model.PageIndex, "", "")
</div>
