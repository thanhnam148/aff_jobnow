
@{
    ViewBag.Title = "withdraws";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="d-block">
    <div class="m-widget17">
        @Html.Action("Balance", "Transaction")
        <div class="row" style="padding:0 30px 30px 30px;">
            <span style="font-style:italic; color:#7b7e8a">
                *Để đảm bảo thu nhập từ link giới thiệu của các bạn thực nhận vẫn đủ 50%, hệ thống cấu hình tăng thêm 5% cho các bạn, số tiền tăng thêm này sẽ được khấu trừ vào thuế thu nhập cá nhân theo luật của nhà nước!
            </span>
        </div>
    </div>
    
</div>
    
<div class="m-portlet m-portlet--mobile">
    <div class="m-alert m-alert--icon alert alert-danger m--hide" role="alert" id="m_form_1_msg">
        <div class="m-alert__icon">
            <i class="la la-warning"></i>
        </div>
        <div class="m-alert__text">
            Oh snap! Change a few things up and try submitting again.
        </div>
        <div class="m-alert__close">
            <button type="button" class="close" data-close="alert" aria-label="Close"></button>
        </div>
    </div>
    <div class="m-portlet__head">
        <div class="m-portlet__head-caption">
            <div class="m-portlet__head-title">
                @*<button type="button" class="btn btn-success" id="customwithdraw">
                    Rút tiền
                </button>*@

            </div>
        </div>
    </div>
    <div class="m-portlet__body">
        <!--begin: Search Form -->
        
        <!--end: Search Form -->
        <!--begin: Datatable -->
        <div class="m_datatable" id="ajax_data"></div>
        <!--end: Datatable -->
    </div>
    <!--begin::Modal-->
    <div class="modal fade" id="m_modal_1" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">
                        Cập nhật thông tin cá nhân
                    </h5>

                </div>
                <div class="modal-body">
                    <p>
                        Để thuận tiện cho việc thanh toán, vui lòng cập nhập thông tin tài khoản của bạn. Hệ thống sẽ tự động đối soát vào ngày mùng 5 hàng tháng và chuyển tiền cho bạn vào ngày mùng 10. Xin trân trọng cảm ơn !
                    </p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" onclick="location.href='@Url.Action("UpdateUser","account")'">
                        Cập nhật
                    </button>
                </div>
            </div>
        </div>
    </div>
    <!--end::Modal-->
    <input type="hidden" class="hidden" id="bank-info" value="@ViewBag.HasBankAccount" />
</div>

@section scripts
{
    <script src="~/assets/scripts/withdraw-ajax.js" type="text/javascript"></script>
    <script src="~/assets/scripts/form-controls.js" type="text/javascript"></script>
    <script type="text/javascript">
        jQuery(document).ready(function () {
            if($('#bank-info').val() == "0")
            {
                setTimeout(function() {
                    $('#m_modal_1').modal({
                        backdrop: 'static',
                        keyboard: false
                    });
                }, 2000);
            }
            
        });
    </script>
}


