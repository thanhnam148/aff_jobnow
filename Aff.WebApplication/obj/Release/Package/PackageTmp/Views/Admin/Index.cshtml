
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-col-xl-12">
        <!--begin:: Widgets/Activity-->
        <div class="m-portlet m-portlet--bordered-semi m-portlet--widget-fit m-portlet--full-height m-portlet--skin-light ">
            <div class="m-portlet__head">
                <div class="m-portlet__head-caption">
                    <div class="m-portlet__head-title">
                        <h3 class="m-portlet__head-text m--font-light">
                            Hoạt động
                        </h3>
                    </div>
                </div>
            </div>
            <div class="m-portlet__body">
                <div class="m-widget17">
                    <div class="m-widget17__visual m-widget17__visual--chart m-portlet-fit--top m-portlet-fit--sides m--bg-info">
                        <div class="m-widget17__chart" style="height:320px;">
                            <div class="chartjs-size-monitor" style="position: absolute; left: 0px; top: 0px; right: 0px; bottom: 0px; overflow: hidden; pointer-events: none; visibility: hidden; z-index: -1;"><div class="chartjs-size-monitor-expand" style="position:absolute;left:0;top:0;right:0;bottom:0;overflow:hidden;pointer-events:none;visibility:hidden;z-index:-1;"><div style="position:absolute;width:1000000px;height:1000000px;left:0;top:0"></div></div><div class="chartjs-size-monitor-shrink" style="position:absolute;left:0;top:0;right:0;bottom:0;overflow:hidden;pointer-events:none;visibility:hidden;z-index:-1;"><div style="position:absolute;width:200%;height:200%;left:0; top:0"></div></div></div>
                            <canvas id="m_chart_activities" width="1588" height="208" class="chartjs-render-monitor" style="display: block; width: 1588px; height: 208px;"></canvas>
                        </div>
                    </div>
                    @Html.Action("Balance", "Transaction")
                </div>
                <div class="row" style="border-bottom:0.07rem dashed #ebedf2">
                    <span style="font-style:italic; color:#7b7e8a">
                        *Để đảm bảo thu nhập từ link giới thiệu của các bạn thực nhận vẫn đủ 50%, hệ thống cấu hình tăng thêm 5% cho các bạn, số tiền tăng thêm này sẽ được khấu trừ vào thuế thu nhập cá nhân theo luật của nhà nước!
                    </span>
                </div>
                <div class="m-widget14">
                    
                    <div class="m-widget14__header">
                        <h3 class="m-widget14__title">
                            Số lượt click trong ngày : <span style="color:#716aca;">@ViewBag.ViewCountInDay</span>
                        </h3>
                    </div>
                    <div class="m-widget14__header">
                        <h3 class="m-widget14__title">
                            Tổng số lượt click : <span style="color:#716aca;">@ViewBag.TotalCountAccess</span>
                        </h3>
                    </div>
                </div>
            </div>
            <!--begin::Modal-->
            <div class="modal fade" id="m_modal_1" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLabel">
                                Cập nhật thông tin cá nhân
                            </h5>
                            
                        </div>
                        <div class="modal-body">
                            <p>
                                Để thuận tiện cho việc thanh toán, vui lòng cập nhập thông tin tài khoản của bạn. Hệ thống sẽ tự động đối soát vào ngày mùng 5 hàng tháng và chuyển tiền cho bạn vào ngày mùng 10. Xin trân trọng cảm ơn !
                            </p>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-primary" onclick="location.href='@Url.Action("UpdateUser","account")'">
                                Cập nhật
                            </button>
                        </div>
                    </div>
                </div>
            </div>
            <!--end::Modal-->
        </div>
        <input type="hidden" class="hidden" id="bank-info" value="@ViewBag.HasBankAccount"/>
        <!--end:: Widgets/Activity-->
    </div>

</div>
@section scripts
{
    <script type="text/javascript">
        jQuery(document).ready(function () {
            
            if($('#bank-info').val() == "0")
            {
                setTimeout(function() {
                    $('#m_modal_1').modal({
                        backdrop: 'static'
                    });
                }, 2000);
            }
            
        });
    </script>
    
}

